{
  "compilerOptions": {
    "alwaysStrict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "es2016"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": "."
    // "resolveJsonModule": true
  },
  "files": [
    "./types/index.d.ts",
    "./node_modules/@types/redux-actions/index.d.ts"
  ],
  "include": [
    "types",
    "libs/**/*",
    "config/**/*.json",
    "src/**/*"
  ],
  "exclude": [
    // "node_modules",
    "dist",
    "build",
    "test",
    "config/local.json"
  ]
}